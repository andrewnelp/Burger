<div class="container">

  <div class="jumbotron">
    <h1>Order Your Burger </h1>
    <p>Burger Orders for Pickup.</p>
    <br>
    <h2>Select a Burger</h2>
    
        <form class="create-form">
          <div class="input-group">
            <div class="form-group">
              <label for="newburger"></label>
              <input type="text" class="form-control" id="newburger" name="burger" placeholder="Order Your burger">
            </div>
          </div>
            {{!-- <input type="text" id="newburger" name="burger"> --}}
            </button>
            <button type="submit" class="btn btn-success btn-lg" id="addburger">Get It</button>
         
        </form>
      
    
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>
          <p>Send order to cashier when ready for pick up</p>
        </div>
        <div class="panel-body">

          <ul>
            {{#each burgers}}
            {{#unless devoured}}

            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="rightside"><strong>Burger is Ready for Pick Up</strong>
          <p>Remove order from pick up when delivered</p>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>



        </div>
      </div>
    </div>

  </div>
  <!--endrow -->
</div>
<!--endcontainer -->